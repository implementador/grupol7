<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.stock</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.view_company_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="before">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="text-muted">Activando esta función no se permitirán los movimientos de almacén si generan existencias negativas, a menos que se permita explícitamente en cada ubicación.</div>
                        <div class="o_setting_right_pane">
                            <field name="no_negative_stock" widget="boolean_toggle"/>
                            <div class="text-muted">No negative stocks are allowed</div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
