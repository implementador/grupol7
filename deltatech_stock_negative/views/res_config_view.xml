<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="res_company_view_form" model="ir.ui.view">
            <field name="name">res.company.view.form.inherit.stock</field>
            <field name="model">res.company</field>
            <!-- Cambia la referencia de la vista heredada aquí -->
            <field name="inherit_id" ref="res.company.form.inherit.social.media" />
            <field name="arch" type="xml">
                <!-- Modifica esta expresión XPath -->
                <xpath expr="//page[@name='general_info']/group/group[@name='social_media']" position="after">
                    <!-- Crear un nuevo grupo para el campo -->
                    <group string="Inventario">
                        <field name="no_negative_stock" widget="boolean_toggle"/>
                        <div class="text-muted">
                            Activando esta función no se permitirán los movimientos de almacén si generan existencias negativas, a menos que se permita explícitamente en cada ubicación.
                        </div>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
