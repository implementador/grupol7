<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_company_view_form" model="ir.ui.view">
            <field name="name">res.company.view.form.inherit.stock</field>
            <field name="model">res.company</field>
            <!-- Cambiar inherit_id a la vista heredada del módulo social_media -->
            <field name="inherit_id" ref="social_media.view_company_form_inherit_social_media"/>
            <field name="arch" type="xml">
                <!-- Agregar el nuevo grupo después del grupo de social_media -->
                <xpath expr="//group[@name='social_media']" position="after">
                    <group string="Movimientos de inventario">
                        <field name="no_negative_stock" widget="boolean_toggle"/>
                        <div class="text-muted">
                            Activando esta función no se permitirán los movimientos de almacén si generan existencias negativas, a menos que se permita explícitamente en cada ubicación.
                        </div>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
