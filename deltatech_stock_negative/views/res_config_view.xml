<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_company_view_form" model="ir.ui.view">
            <field name="name">res.company.view.form.inherit.stock</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <!-- Modificamos la expresión XPath para apuntar a la posición deseada -->
                <xpath expr="//page[@name='general_info']/group" position="before">
                    <!-- Creamos un nuevo grupo para el campo no_negative_stock -->
                    <group string="Stock Settings">
                        <field name="no_negative_stock" widget="boolean_toggle"/>
                        <div class="text-muted">
                            Activando esta función no se permitirán los movimientos de almacén si generan existencias negativas, a menos que se permita explícitamente en cada ubicación.
                        </div>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
