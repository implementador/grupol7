        <field name="arch" type="xml">
            <xpath expr="//div[@id='pos_interface_section']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="pos_show_product_info"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="pos_show_product_info"/>
                        <div class="text-muted">
                            Habilitado muestra el bot贸n de informaci贸n en los productos.
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="pos_hide_cost_currency"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="pos_hide_cost_currency"/>
                        <div class="text-muted">
                            Oculta el costo en la ventana de informaci贸n.
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="pos_hide_margin"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="pos_hide_margin"/>
                        <div class="text-muted">
                            Oculta el margen en la ventana de informaci贸n.
                        </div>
                    </div>
                </div>
            </xpath>

            <xpath expr="//div[@id='multiple_prices_setting']" position="after">
                <div class="col-12 col-lg-6 o_setting_box price_control">
                    <div class="o_setting_right_pane">
                        <div class="row mt16">
                            <label string="Available Pricelist" for="pos_show_available_pricelist_ids" class="col-lg-3 o_light_label"/>
                            <field name="pos_show_available_pricelist_ids" widget="many2many_tags" domain="[('id', 'in', pos_available_pricelist_ids)]"/>
                        </div>
                    </div>
                </div>
            </xpath>

        </field>
    </record>
</odoo>
