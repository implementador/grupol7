<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="custom_bi_pos_show_product_info_form_view">
        <field name="name">res.config.setting.form.prodcut.info.view</field>
        <field name="model">res.config.settings</field>
