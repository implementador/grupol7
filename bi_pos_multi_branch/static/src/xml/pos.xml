<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
	<t t-extend="OrderLinesReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension" owl="1">
		
		<xpath expr="//t[@t-if='receipt.company.logo']/img[hasclass('pos-receipt-logo')]" position="replace">
			<t t-if="receipt.company.logo">
				<t t-if='env.pos.pos_branch_data[0] and env.pos.pos_branch_data[0].image'>
					<img class="pos-receipt-logo" t-att-src="'data:image/png;base64,'+env.pos.pos_branch_data[0].image" alt="Logo"/>
					<br/>
				</t>
				<t t-else="">
					<img class="pos-receipt-logo" t-att-src="receipt.company.logo" alt="Logo"/>
					<br/>
				</t>
			</t>
		</xpath>




		<xpath expr="//div[hasclass('cashier')]" t-operation="after">
			<div>Branch: <t t-esc="env.pos.pos_session.branch_id[1]" /></div>
		</xpath>
	</t>
</templates>